#include<stdio.h>

int main()
{
    int t,n,a,b,i;

    scanf("%d",&t);

    for (i = 0; i < t; i++)
    {
        scanf("%d %d %d",&n,&a,&b);
        int ep = n / 2;
        if (n%2 == 0)
        {
          int res1 = ep * a + ep *b;
            printf("%d\n",res1);
        }
        
        else if (n%2 != 0 )
        {
          int res2 = ep * a + (ep +1) *b;
            printf("%d\n",res2);
        }
    }
    return 0;
}
