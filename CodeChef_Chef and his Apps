#include<stdio.h>
int main ()
{
    int t,i,s,x,y,z,sum=0,sub=0;
    scanf("%d",&t);
    for(i=0;i<t;i++)
    {
        scanf("%d%d%d%d",&s,&x,&y,&z);
        sum = x + y;
        sub = s - sum;
        if (x + y+ z <= s) printf("0\n");

        else if (y + z <= s || x + z <= s ) printf("1\n");


        else  printf("2\n");



    }



    return 0;
}
